@model PainTrackerPT.Models.PainDiary.Log

@{
    ViewData["Title"] = "Delete";
}

<style>
    #PDwrapper {
        padding: 25px;
    }
</style>


<div id="PDwrapper">

    <h1>Deletion of Logs</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>

        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.logTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.logTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.writtenNotes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.writtenNotes)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.audioNotes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.audioNotes)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.mood)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.mood)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.entryId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.entryId)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="logID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a href="@Url.Action("View", "PainEntry", new { id = Model.entryId })">Back to Entry View</a>
        </form>
    </div>
</div>
