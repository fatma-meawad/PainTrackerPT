@model PainTrackerPT.Models.PainDiary.Log

@{
    ViewData["Title"] = "Create";
}

<style>
    #PDwrapper {
        padding: 25px;
    }
</style>


<div id="PDwrapper">

    <h1>Creation of Logs</h1>


    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="logTime" class="control-label"></label>
                    <input asp-for="logTime" class="form-control" />
                    <span asp-validation-for="logTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="writtenNotes" class="control-label"></label>
                    <input asp-for="writtenNotes" class="form-control" />
                    <span asp-validation-for="writtenNotes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="audioNotes" class="control-label"></label>
                    <input asp-for="audioNotes" class="form-control" />
                    <span asp-validation-for="audioNotes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="mood" class="control-label"></label>
                    <select asp-for="mood" class="form-control">
                        <option value="HAPPY">HAPPY</option>
                        <option value="ANGRY">ANGRY</option>
                        <option value="SAD">SAD</option>
                        <option value="UPSET">UPSET</option>
                        <option value="DISAPPOINTED">DISAPPOINTED</option>
                    </select>
                    <span asp-validation-for="mood" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="entryId" hidden class="form-control" value="@ViewBag.entryId">
                    <span asp-validation-for="entryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to Pain Diary Entry </a>
    </div>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
