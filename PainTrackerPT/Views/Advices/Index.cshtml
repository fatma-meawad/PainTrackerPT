@model IEnumerable<PainTrackerPT.Models.Followups.Advice>

@{
    ViewData["Title"] = "Index";

    int id = ViewBag.id;

}

<h1>Index</h1>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.id });
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateGenerated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateGenerated)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
