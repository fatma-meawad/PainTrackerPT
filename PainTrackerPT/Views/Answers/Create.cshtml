@using PainTrackerPT.Models.Followups
@model PainTrackerPT.Models.Followups.Answer

@{

    ViewData["Title"] = "Create";
    int id = ViewBag.id;

    Answer ans = new Answer();
    ans.QuestionId = id;

}

<h1>Create</h1>

<h4>Answering For Follow Up @ans.QuestionId </h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateGenerated" class="control-label"></label>
                <input asp-for="DateGenerated" class="form-control" />
                <span asp-validation-for="DateGenerated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
