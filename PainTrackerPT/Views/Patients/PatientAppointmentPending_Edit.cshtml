@model PainTrackerPT.Models.Doctors.Appointment

@{
    ViewData["Title"] = "PatientAppointmentPending_Edit";
}

<h1>Patient</h1>

<h4>Appointment</h4>
<hr />

<table border="1" cellpadding="20">
    <tr style="font-weight:700">
        <td bgcolor="#9985ad">Pending</td>
        <td>Awaiting Confirmation</td>
        <td>Appointment Confirmed</td>
    </tr>
</table>

<div class="row">
    <div class="col-md-4">
        <form asp-action="PatientAppointment_Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AppointmentId" readonly/>
            <div class="form-group">
                <label asp-for="PatientID" class="control-label"></label>
                <input asp-for="PatientID" class="form-control" readonly/>
                <span asp-validation-for="PatientID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="pdAttach" /> @Html.DisplayNameFor(model => model.pdAttach)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="miAttach" /> @Html.DisplayNameFor(model => model.miAttach)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label" hidden></label>
                <input asp-for="status" class="form-control" hidden/>
                <span asp-validation-for="status" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>

</div>

