@model PainTrackerPT.Models.Doctors.Appointment

@{
    ViewData["Title"] = "PatientAppointmentAwaitingCfm_Edit";
}

<h1>PatientAppointmentAwaitingCfm_Edit</h1>

<h4>Appointment</h4>
<hr />

<table border="1" cellpadding="20">
    <tr style="font-weight:700">
        <td>Pending</td>
        <td bgcolor="#9985ad">Awaiting Confirmation</td>
        <td>Appointment Confirmed</td>
    </tr>
</table>

<div class="row">
    <div class="col-md-4">
        <form asp-action="PatientAppointment_Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AppointmentId" />
            <div class="form-group">
                <label asp-for="PatientID" class="control-label" hidden></label>
                <input asp-for="PatientID" class="form-control" hidden/>
                <span asp-validation-for="PatientID" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorID" class="control-label" hidden></label>
                <input asp-for="DoctorID" class="form-control" hidden/>
                <span asp-validation-for="DoctorID" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" readonly/>
                <span asp-validation-for="Message" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label asp-for="AppDate" class="control-label" hidden></label>
                <input asp-for="AppDate" class="form-control" hidden/>
                <span asp-validation-for="AppDate" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <label asp-for="ProposedDate" class="control-label"></label>
                <input asp-for="ProposedDate" class="form-control"  readonly/>
                <span asp-validation-for="ProposedDate" class="text-danger"></span>
                <a asp-action="PatientAppointmentPatProposeNewDate_Edit">Propose a new date</a>
            </div>
            <div class="form-group">
                <label asp-for="ApptLocation" class="control-label"></label>
                <input asp-for="ApptLocation" class="form-control" readonly/>
                <span asp-validation-for="ApptLocation" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="pdAttach" disabled/> @Html.DisplayNameFor(model => model.pdAttach)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="miAttach" disabled/> @Html.DisplayNameFor(model => model.miAttach)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label" hidden></label>
                <input asp-for="status" class="form-control" value="ApptCfm" hidden/>
                <span asp-validation-for="status" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>

</div>

