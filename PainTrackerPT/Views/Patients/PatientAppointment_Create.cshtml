@model PainTrackerPT.Models.Doctors.Appointment

@{
    ViewData["Title"] = "PatientAppointment_Create";
}

<h1>Request an appointment</h1>

<h4>Appointment</h4>
<p>@ViewBag.ErrorMessage</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PatientAppointment_Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientID" class="control-label"></label>
                <input asp-for="PatientID" class="form-control" />
                <span asp-validation-for="PatientID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>


            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="pdAttach" /> Pain Diary
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="miAttach" /> Medicine Intake
                </label>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label" hidden></label>
                <input asp-for="status" class="form-control" value="Pending" hidden/>
                <span asp-validation-for="status" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

