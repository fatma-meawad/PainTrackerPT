@model IEnumerable<PainTrackerPT.Models.Followups.Question>

@{
    ViewData["Title"] = "Questions";
}
<div class="container" style="margin:10px;">


    <h1>Question List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateGenerated)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateGenerated)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a asp-controller="Answers" asp-action="Index" asp-route-id="@item.Id">View All Answers</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>