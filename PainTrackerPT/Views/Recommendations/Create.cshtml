@using PainTrackerPT.Models.Followups
@model PainTrackerPT.Models.Followups.Recommendation

@{
    ViewData["Title"] = "Create";
    int id = ViewBag.id;

    Recommendation recommendation = new Recommendation();
    recommendation.AnswerId = id;

}
<div class="container" style="margin:10px;">

    <h1>Create</h1>

    <h4>Adding Recommendation to answer @recommendation.AnswerId  </h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <input asp-for="DateGenerated" class="form-control" type="hidden" value="@DateTime.Now" />

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    </div>