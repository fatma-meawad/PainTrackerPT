@model IEnumerable<PainTrackerPT.Models.Medicine.MedicineEvent>

@{
    ViewData["Title"] = "Index";
}
<div class="m-grid__item m-grid__item--fluid m-wrapper">

    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title ">Medicine Schedules for @ViewBag.Name</h3>
            </div>
        </div>
    </div>

    <!-- END: Subheader -->
    <div class="m-content">

        <!--Begin::Section-->
        <div class="row">
            <div class="col-xl-12">
                <div class="m-portlet m-portlet--mobile ">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Medicine Schedules
                                </h3>
                            </div>
                        </div>
                        <div class="m-portlet__head-tools">
                            <ul class="m-portlet__nav">
                                <li class="m-portlet__nav-item">
                                    @*<a href="@Url.Action("Create")" class="btn btn-accent m-btn m-btn--custom m-btn--pill m-btn--icon m-btn--air">*@
                                    @Html.ActionLink("Create", "Create", "MedicineIntakeEvent", new { medID = ViewBag.ID, medName = ViewBag.Name })
                                    <span>
                                        <i class="la la-plus"></i>
                                        <span>New Schedule</span>
                                    </span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="m-portlet__body">

                        <!--begin: Datatable -->
                        <table class="table table-striped- table-bordered table-hover table-checkable" id="medicineScheduleTable">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Dosage)
                                    </th>
                                    <th>
                                        Number of intervals
                                    </th>
                                    <th>
                                        Number of Recurring times
                                    </th>
                                    <th>
                                        Start Time
                                    </th>
                                    <th>
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Dosage)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Intervals)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NumOfRecurringTimes)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.StartTime)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", "MedicineIntakeEvent", new { id = @item.EventId, medID = ViewBag.ID, medName = ViewBag.Name }) |
                                                @Html.ActionLink("View Event Log", "ViewEventLog", "MedicineIntakeEvent", new { id = @item.EventId, medName = ViewBag.Name }) |
                                                @Html.ActionLink("Delete", "Delete", "MedicineIntakeEvent", new { id = @item.EventId, medID = ViewBag.ID, medName = ViewBag.Name })
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!--End::Section-->

    </div>
</div>