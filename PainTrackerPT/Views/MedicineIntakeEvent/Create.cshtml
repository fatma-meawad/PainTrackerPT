@model PainTrackerPT.Models.Medicine.MedicineEvent

@{
    ViewData["Title"] = "Create";
}

<div class="m-grid__item m-grid__item--fluid m-wrapper">

    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title ">Create Schedule for @ViewBag.Name</h3>
            </div>
        </div>
    </div>

    <!-- END: Subheader -->
    <div class="m-content">

        <!--Begin::Section-->
        <div class="row">
            <div class="col-xl-12">
                <div class="m-portlet m-portlet--mobile ">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Medicine Event
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <div class="row">
                            <div class="col-md-4">
                                <form asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="MedId" value=@ViewBag.MedID />
                                    <div class="form-group">
                                        <label asp-for="Dosage" class="control-label"></label>
                                        <input asp-for="Dosage" class="form-control" required="required" />
                                        <span asp-validation-for="Dosage" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Intervals" class="control-label">Number of hours</label>
                                        <input asp-for="Intervals" class="form-control" required="required" />
                                        <span asp-validation-for="Intervals" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="NumOfRecurringTimes" class="control-label">Number of intakes per day</label>
                                        <input asp-for="NumOfRecurringTimes" class="form-control" required="required" />
                                        <span asp-validation-for="NumOfRecurringTimes" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="StartTime" class="control-label"></label>
                                        <input asp-for="StartTime" class="form-control" required="required" />
                                        <span asp-validation-for="StartTime" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="hidden" name="medName" value=@ViewBag.Name />
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>
                        @Html.ActionLink("Back Home", "Index", "MedicineIntakeEvent", new { id = @ViewBag.MedID, medName = ViewBag.Name })
                    </div>
                </div>
            </div>
        </div>

        <!--End::Section-->
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}